{% extends "layout.html.jinja2" %}
{% block title %}Stream{% endblock %}

{% block scripts %}
    <style>
        .btn-purple {
            color: #FFF;
            background-color: #4F23A2
        }
    </style>
    <script type="text/javascript" src="/static/js/angular/stream.js"></script>
{% endblock %}

{% block content %}
    <div class="row" ng-app="btvStreamApp" ng-controller="StreamCtrl as stream">
        <div ng-class="{ 'col-md-offset-2': true, 'col-md-4': chatShown, 'col-md-8': !chatShown }">
            <h3 ng-show="chatShown">Stream</h3>
            <div align="center">
                <iframe id="stream-frame" src="http://www.ustream.tv/embed/20768037?wmode=direct"
                        style="border: 0 none transparent; overflow: hidden;" webkitallowfullscreen allowfullscreen
                        frameborder="no" width="800" height="600" scrolling="no"></iframe>
                <div id="stream-buttons">
                    <button class="btn btn-purple btn-xs" ng-click="reloadStream()">Reload Stream</button>
                    <button class="btn btn-purple btn-xs">Pop Out Chat</button>
                    <button class="btn btn-purple btn-xs" ng-click="toggleChat()"><span ng-show="chatShown">Hide</span><span ng-hide="chatShown">Show</span> Chat</button>
                    <button class="btn btn-purple btn-xs">Broken Stream?</button>
                </div>
            </div>
        </div>
        <div ng-class="{ 'col-md-4': chatShown }">
            <div id="chat" ng-show="chatShown">
                <h3>Chat</h3>
                <iframe id="chat" style="border: 0; width: 100%; height: 600px;" scrolling="no"
                        src="https://kiwiirc.com/client?settings=3eda7e82f0210b259be287b5bfa1a89d"></iframe>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div align="center" class="purple-box" style="margin-top: 1em;">
                <p>Text here and things and stuff</p>
                <p>Do this if shit's broke</p>
                <p>Go here for horse vagina</p>
                <p>etc</p>
            </div>
        </div>
    </div>
{% endblock %}